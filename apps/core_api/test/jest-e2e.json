{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/src/$1"
  },
  "setupFiles": ["<rootDir>/test/jest-env.ts"],
  "setupFilesAfterEnv": ["<rootDir>/test/setup-e2e.ts"],
  "collectCoverageFrom": ["src/**/*.(t|j)s"],
  "verbose": true
}
